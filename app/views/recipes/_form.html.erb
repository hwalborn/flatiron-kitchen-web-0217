<%= form_for @recipe do |f| %>
  <%= f.text_field :name, {value: @recipe.name} %><br>
  <% @ingredients.each do |ingredient| %>
    <%= label_tag "recipe[ingredient_ids][]", ingredient.name %>
    <input type="checkbox" name="recipe[ingredient_ids][]" value="<%= ingredient.id %>" id="<%= ingredient.name %>">
  <% end %><br>
  <%= f.submit %>
<% end %>
